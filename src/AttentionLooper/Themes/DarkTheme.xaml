<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Ninja Mode - Dark Theme -->
    <Color x:Key="BackgroundColor">#0D0D12</Color>
    <Color x:Key="SurfaceColor">#1A1A24</Color>
    <Color x:Key="AccentColor">#7B8EA8</Color>
    <Color x:Key="WaveformColor">#5C5C8A</Color>
    <Color x:Key="WaveformGlowColor">#3A3A5C</Color>
    <Color x:Key="TextPrimaryColor">#C0C0CC</Color>
    <Color x:Key="TextMutedColor">#666680</Color>
    <Color x:Key="ButtonHoverColor">#2A2A38</Color>
    <Color x:Key="BorderColor">#2A2A38</Color>

    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}" />
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}" />
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}" />
    <SolidColorBrush x:Key="WaveformBrush" Color="{StaticResource WaveformColor}" />
    <SolidColorBrush x:Key="WaveformGlowBrush" Color="{StaticResource WaveformGlowColor}" />
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}" />
    <SolidColorBrush x:Key="TextMutedBrush" Color="{StaticResource TextMutedColor}" />
    <SolidColorBrush x:Key="ButtonHoverBrush" Color="{StaticResource ButtonHoverColor}" />
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}" />

</ResourceDictionary>
