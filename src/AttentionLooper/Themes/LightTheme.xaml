<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Samurai Mode - Light Theme -->
    <Color x:Key="BackgroundColor">#F5F0E8</Color>
    <Color x:Key="SurfaceColor">#EDE6D6</Color>
    <Color x:Key="AccentColor">#B33A3A</Color>
    <Color x:Key="WaveformColor">#C4634F</Color>
    <Color x:Key="WaveformGlowColor">#C4A882</Color>
    <Color x:Key="TextPrimaryColor">#2C2416</Color>
    <Color x:Key="TextMutedColor">#8C8070</Color>
    <Color x:Key="ButtonHoverColor">#E6DCC8</Color>
    <Color x:Key="BorderColor">#D4CAB8</Color>

    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}" />
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}" />
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}" />
    <SolidColorBrush x:Key="WaveformBrush" Color="{StaticResource WaveformColor}" />
    <SolidColorBrush x:Key="WaveformGlowBrush" Color="{StaticResource WaveformGlowColor}" />
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}" />
    <SolidColorBrush x:Key="TextMutedBrush" Color="{StaticResource TextMutedColor}" />
    <SolidColorBrush x:Key="ButtonHoverBrush" Color="{StaticResource ButtonHoverColor}" />
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}" />

</ResourceDictionary>
